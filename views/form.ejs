<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="/socket.io/socket.io.js"></script>
		<script src="/main.js"></script>
        <title>Desafio Entregable 6</title>
    </head>
    <body>
        <!-- form for nombre, apellido, edad -->
        <div class="form-container">
            <form class="form" action="/productos" method="post">
                <h2>Registra un producto</h2>
                <div class="form-group">
                    <label for="name">Producto</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Producto">
                </div>
                <div class="form-group">
                    <label for="price">Precio</label>
                    <input type="number" class="form-control" id="price" name="price" placeholder="Precio">
                </div>
                <div class="form-group">
                    <label for="thumbnail">Imagen</label>
                    <input type="text" class="form-control" id="thumbnail" name="thumbnail" placeholder="URL de Imagen">
                </div>
                <button type="submit" class="btn btn-primary">Enviar producto</button>
            </form>
            <div class="form chat-container" id="messageContainer">
                <form action="/" method="post" onsubmit="return addMessage(this)">
                    <h2>Manda un mensaje</h2>
                    <div id="messages"></div>
                    <div class="form-group">
                        <input type="text" id="email" placeholder="Tu Mail" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="text" id="mensaje" placeholder="Escribe un mensaje" class="form-control">
                    </div>
                    <input type="submit" value="Enviar" class="btn btn-primary">
                </form>
            </div>
        </div>
        <div class="div-btn">
            <a href="/productos">
                <button class="btn btn-secondary">Ver productos</button>
            </a>
        </div>
    </body>
    <style>
        * {
            box-sizing: border-box;
        }

        html {
            font-family: "Open Sans", sans-serif;
            font-size: 16px;
            height: 150vh;
            width: auto;
            background-color: blanchedalmond;
        }

        body {
            background-color: blanchedalmond;
        }

        .form-container {
            display: flex;
            flex-direction: row;
        }

        .stick {
            display: block;  
            text-align: center;
            position: sticky;
        }

        .form {
            background-color: goldenrod;
            flex: 0 0 auto;
            margin: 50px;
            border-radius: 2rem;
            justify-content: center;
            align-items: center;
            font-size: 2rem;
            font-weight: 100;
            padding: 2rem;
            height: fit-content;
            width: 40%;
        }

        .chat-container {
            border-radius: 25px;
            left: 50%;
            top: 50%;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            background-color: mediumaquamarine;
        }
  
        #messages {
            position: relative;
            list-style: none;
            padding: 20px 10px 40px 10px;
            margin: 0;
            height: auto;
            overflow: scroll;
            overflow-x: hidden;
            font-size: 16px;
        }

        

        input{
            text-align: left; 
            padding: 0.5rem;
            margin: 0 auto 0.5rem;
            border: none;
            color: black;
            border-radius: 10px;
        }

        .btn {
            margin-top: 15px;
            width: 150px;
        }

        .div-btn {
            padding: 25px 25px;
            width: 75%;
        }
    </style>
</html>